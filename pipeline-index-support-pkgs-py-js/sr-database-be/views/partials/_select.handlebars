<div class="jumbotron">
    <h1>
        <center>Support Package Helper</center>
    </h1>
</div>
<form action="/filter" method="POST">
    <select name="TYPE">
        {{#each plt}}
        <option value="{{this}}">{{this}}</option>
        {{/each}}
    </select>
    <select name="MR">
        {{#each bld}}
        <option value="{{this}}">{{this}}</option>
        {{/each}}
    </select>
    <input type="submit" value="Submit">
    <input type="text" name="SR" placeholder="SR #">
</form>
{{#if total}}
<div style="margin:1rem 0px;margin-bottom:0px;">
<h6 class="d-flex display-6 justify-content-end"><i>Total={{total}}</i></h6>
</div>
{{/if}}
<hr style="padding: 0px; margin: 0px;">
